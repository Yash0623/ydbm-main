<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_accomodation" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="2dp"
                android:background="#1261A0" />

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:padding="7dp">

                <com.ydbm.utils.LabelLayout
                    android:id="@+id/label_layout_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:labelBackground="#008000"
                    app:labelDistance="20dp"
                    app:labelGravity="top_right"
                    app:labelHeight="20dp"
                    app:labelText="New"
                    app:labelTextColor="@android:color/white"
                    app:labelTextDirection="left_to_right"
                    app:labelTextSize="12sp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent" />

                </com.ydbm.utils.LabelLayout>

                <LinearLayout
                    android:id="@+id/linearBookingid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/textViewBookingIdTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Id"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textColor="#757575"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textViewBookingIdValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABCDE13245"
                            android:textColor="#000000"></TextView>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/linearBookingid"
                    android:layout_alignLeft="@id/linearBookingid"
                    android:layout_alignRight="@id/linearBookingid"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/colorPrimary"></View>


                <LinearLayout
                    android:id="@+id/linearNm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textViewYatriNameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_account_box"
                        android:drawablePadding="4dp"
                        android:text="Yatri Name"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewYatriNamevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maitri Test"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearCheckInOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearRmtyp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewCheckInTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_date_range"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="Check in"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/textViewCheckInvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24/09/2019"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearCheckInOut"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewCheckoutTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_date_range"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="Check out"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/textViewCheckoutvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="24/09/2019"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearExtraMattress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearOut"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/textViewExtraMattressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="Extra Mattress"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />

                    <TextView
                        android:id="@+id/textViewExtraMattressValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearExtraMattress"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_NoNights"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Nights"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_rooms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Room"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_persons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Guests"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearDataValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearData"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_NoNightsValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:text="12" />

                    <TextView
                        android:id="@+id/tv_rooms_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:text="01" />

                    <TextView
                        android:id="@+id/tv_persons_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        tools:text="03" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRmtyp"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearNm"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room type : " />

                    <TextView
                        android:id="@+id/textViewRmType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBtns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="15dp"


                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_bookingDetails"
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_action_remove_red_eye"

                        android:tint="@color/colorPrimaryDark"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/btn_bookingShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_bookingDetails"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:layout_marginTop="18dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_action_share"

                        android:tint="@color/colorPrimaryDark"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearResonse"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/linearDataValue"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/linear_bg"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/btnOptionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="No"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/btnOptionYes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:background="@drawable/confirm_btn_bg_round"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Yes"

                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearConfirmBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearDataValue"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"


                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm By : "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewConfirmByValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345677888"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearInquiryRply"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearDataValue"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvInquiryReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="jshjds"
                        android:textSize="14sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvInquirySuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearInquiryRply"
                    android:text=""
                    android:textSize="12sp"
                    android:visibility="gone" />

                <RadioGroup
                    android:id="@+id/radioGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearResonse"
                    android:layout_alignLeft="@id/linearResonse"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/radioNA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="not available" />

                    <RadioButton
                        android:id="@+id/radioOA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="other available" />
                </RadioGroup>


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#1261A0" />
            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>